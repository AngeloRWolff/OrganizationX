<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OrganizationX</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/material.css" />
    <style>
        /* width */
        ::-webkit-scrollbar {
            width: 8px;
        }

        /* Track */
        ::-webkit-scrollbar-track {
            background: #3a3a3a;
            border-radius: 5px;
        }

        /* Handle */
        ::-webkit-scrollbar-thumb {
            background: #2e5f75;
            border-radius: 5px;
        }

            /* Handle on hover */
            ::-webkit-scrollbar-thumb:hover {
                background: #37728d;
                border-radius: 5px;
            }
    </style>
</head>
<body>
    
    @if (User.Identity.IsAuthenticated)
    {
    <header class="side-nav">
        <nav>
            <div>
                <a asp-area="" asp-controller="Home" asp-action="Index">OrganizationX</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div>

                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-button">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-button">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        <li class="nav-button">
                            <a class="nav-link text-light" asp-area="" asp-controller="Employees" asp-action="SearchSelection">Search</a>
                        </li>
                        <li class="nav-button">
                            <a class="nav-link text-light" asp-area="" asp-controller="Employees" asp-action="Analytics">Analytics</a>
                        </li>
                        <li class="nav-button">
                            <a class="nav-link text-light" asp-area="" asp-controller="Employees" asp-action="Create">Create</a>
                        </li>
                    </ul>
                </div>
            </div>


        </nav>

    </header>


    <nav class="header">
        <nav>
            
           

            <partial name="_AdministrationPartial" />
            <partial name="_LoginPartial" />
        </nav>
    </nav>
    }
    <div>
        
        <main >
                @RenderBody();
        </main>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.syncfusion.com/ej2/dist/ej2.min.js"></script>
    <ejs-scripts></ejs-scripts>
    @RenderSection("Scripts", required: false)
</body>
</html>
