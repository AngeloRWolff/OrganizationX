@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul>
@if (SignInManager.IsSignedIn(User))
{
    <li class="inline-block">
        <a  class="nav-link text-light-blue" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="inline-block">
        <form  class="form-inline text-light-blue" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="inline-block">
        <a class="nav-link text-light-blue" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="inline-block">
        <a class="nav-link  text-light-blue" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
