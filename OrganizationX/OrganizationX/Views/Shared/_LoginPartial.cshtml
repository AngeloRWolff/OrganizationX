@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="inline-block">
@if (SignInManager.IsSignedIn(User))
{
    <li class="inline-block">
        <a  class="nav-link text-light-blue" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="inline-block">
        <form  class="form-inline text-light-blue" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Login", "OXUser", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{

    <li class="inline-block">
        <a class="nav-link text-light" asp-area="" asp-controller="OXUsers" asp-action="Login">Login</a>
    </li>
}
</ul>
